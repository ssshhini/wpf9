<Window x:Class="Wpf_Math_practice9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Math_practice9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Select Task:"/>
            <ComboBox x:Name="cmbTasks" Margin="0,5,0,10" SelectionChanged="cmbTasks_SelectionChanged">
                <ComboBoxItem Content="Task 1"/>
                <ComboBoxItem Content="Task 2"/>
                <ComboBoxItem Content="Task 3"/>
                <ComboBoxItem Content="Task 4"/>
                <ComboBoxItem Content="Task 5"/>
                <ComboBoxItem Content="Task 6"/>
                <ComboBoxItem Content="Task 7"/>
                <ComboBoxItem Content="Task 8"/>
                <ComboBoxItem Content="Task 9"/>
                <ComboBoxItem Content="Task 10"/>
                <ComboBoxItem Content="Task 11"/>
                <ComboBoxItem Content="Task 12"/>
                <ComboBoxItem Content="Task 13"/>
                <ComboBoxItem Content="Task 14"/>
                <ComboBoxItem Content="Task 15"/>
                <ComboBoxItem Content="Task 16"/>
                <ComboBoxItem Content="Task 17"/>
                <ComboBoxItem Content="Task 18"/>
                <ComboBoxItem Content="Task 19"/>
                <ComboBoxItem Content="Task 20"/>
                <ComboBoxItem Content="Task 21"/>
                <ComboBoxItem Content="Task 22"/>
                <ComboBoxItem Content="Task 23"/>
                <ComboBoxItem Content="Task 24"/>
                <ComboBoxItem Content="Task 25"/>
                <ComboBoxItem Content="Task 26"/>
                <ComboBoxItem Content="Task 27"/>
                <ComboBoxItem Content="Task 28"/>
                <ComboBoxItem Content="Task 29"/>
                <ComboBoxItem Content="Task 30"/>
            </ComboBox>
            <Label Content="Input Data:"/>
            <TextBox x:Name="txtInput" Margin="0,5,0,10"/>
            <Button Content="Calculate" Click="Button_Click" Margin="0,10,0,10"/>
            <Label Content="Result:"/>
            <TextBlock x:Name="txtResult" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
